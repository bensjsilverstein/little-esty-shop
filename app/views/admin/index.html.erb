<h2>Admin Dashboard</h2>

<h3><%= link_to "Merchants", "/admin/merchants" %></h3>
<h3><%= link_to "Invoices", "/admin/invoices" %></h3>
<h2>Top Customers</h2>
<% @customers.top_five_customers.each_with_index do |customer, index| %>
  <div id="customer<%= index %>">
    <%= "#{index + 1}. #{customer.first_name} #{customer.last_name} - #{customer.transactions_count} Purchases" %>
  </div>
<% end %>

<h2>Incomplete Invoices</h2>
<% @invoices.incomplete_invoices.each_with_index do |invoice, index| %>
  <div id="invoice<%= index %>">
    <%= "Invoice #" %><%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}"%><%= "- #{invoice.created_at.strftime("%A, %B%e, %Y")}"%>
  </div>
<% end %>
