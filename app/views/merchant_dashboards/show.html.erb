<div class="flex-container">

  <div id='title'>
    <h3><%= @merchant.name %>'s Dashboard</h3>
  </div>

  <div id='nav'>
    <th><%= link_to "#{@merchant.name} Item Index", "/merchants/#{@merchant.id}/items" %> </th>
    <th><%= link_to "#{@merchant.name} Invoice Index", "/merchants/#{@merchant.id}/invoices" %></th>
  </div>

</div>


<h2>Top Customers</h2>
<% @merchant.favorite_customers.each_with_index do |customer, index| %>
  <div id="customers<%= index %>">
    <h3><%= "#{customer.first_name} #{customer.last_name}" %></h3>
    <p>Transactions: <%= customer.transactions_count %></p><br>
  </div>
<% end %>
<h2>Items Ready to Ship</h2>
<% @merchant.ready_to_ship.each_with_index do |item, index| %>
  <div id="item<%=index%>">
    <%= "#{item.name} -" "Invoice #"%> <%=link_to "#{item.invoices.first.id}", "/merchants/#{@merchant.id}/invoices/#{item.invoices.first.id}" %> <%= "#{item.date_created.strftime("%A, %B %e, %Y")}" %>
  </div>
<% end %>
