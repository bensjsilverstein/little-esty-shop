<h1>New Item</h1>
<%= form_with url: "/shelters/#{@merchant.id}/items", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>

  <%= f.hidden_field :merchant_id, value: @merchant.id %>

  <%= f.submit %>
<% end %>