<h1><%= @item.name %> Edit Page </h1>

<div id="item-update-form">
  <%= form_with url: "/merchants/#{@item.merchant_id}/items/#{@item.id}", method: :patch, local: true do |f| %>

    <p id="item-name-field">
      <%= f.label :name, "Item Name:" %>
      <%= f.text_field :name, value: "#{@item.name}" %>
    </p>

     <p id="item-description-field">
      <%= f.label :description, "Item Description:" %>
      <%= f.text_field :description, value: "#{@item.description}" %>
    </p>

     <p id="item-price-field">
      <%= f.label :price, "Item Price:" %>
      <%= f.text_field :price, value: "#{number_to_currency(@item.unit_price.fdiv(100)) }" %>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</div>